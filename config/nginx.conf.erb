worker_processes 1;

events {
  worker_connections 1024;
}

http {
  include       mime.types;
  default_type  application/octet-stream;

  sendfile        on;
  keepalive_timeout  65;

  server {
    listen <%= ENV["PORT"] %>;  # Heroku dynamically sets the port

    server_name _;  # Catch all server name

    root <%= ENV["HOME"] %>/public;  # Point to the public directory where your static files are located
    index index.html;  # Default index file

    # Serve static files directly if they exist
    location / {
      try_files $uri @app;
    }

    # Proxy all non-static requests to the app server
    location @app {
      proxy_pass http://127.0.0.1:8080;  # Pass requests to your app server (replace with the correct port)
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Error pages
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
      root <%= ENV["HOME"] %>/public;
    }
  }
}
